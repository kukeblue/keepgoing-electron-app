{
    "name": "my-electron-app",
    "version": "0.1.0",
    "description": "My Electron app",
    "main": "dist/electron/main.js",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "start": "electron ./dist/electron/main.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "package": "electron-builder",
        "afterSign": "scripts/notarize.js"
    },
    "build": {
        "productName": "chepp",
        "appId": "com.chepp.kukechen",
        "copyright": "kukechen",
        "directories": {
            "output": "build"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "./dist/electron/public/icons/favicon.png",
            "uninstallerIcon": "./dist/electron/public/icons/favicon.png",
            "installerHeaderIcon": "./dist/electron/public/icons/favicon.png",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "chepp"
        },
        "publish": [
            {
                "provider": "github",
                "url": "https://github.com/kukeblue/electron-project-template"
            }
        ],
        "files": [
            "dist",
            "html",
            "package.json"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "./dist/electron/public/icons/icon.png",
            "gatekeeperAssess": false,
            "identity": "Shanghai Shucai Network Technology Co., Ltd.",
            "hardenedRuntime": true,
            "entitlements": "scripts/entitlements.mac.plist",
            "entitlementsInherit": "scripts/entitlements.mac.plist"
        },
        "win": {
            "icon": "./public/icons/icon.png",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "ia32"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "public/icons"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "electron": "^12.0.8",
        "electron-builder": "^22.10.5",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0"
    },
    "dependencies": {
        "moment": "^2.29.1"
    },
    "config": {}
}
