{
    "name": "my-electron-app",
    "version": "0.1.0",
    "description": "My Electron app",
    "main": "dist/electron/main.js",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "start": "chcp 65001 && electron ./dist/electron/electron/main.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "package": "electron-builder",
        "win32": "electron-builder --win --x32",
        "win64": "electron-builder --win --x64",
        "afterSign": "scripts/notarize.js"
    },
    "build": {
        "productName": "乾坤辅助",
        "appId": "com.chepp.kukechen",
        "copyright": "kukechen",
        "directories": {
            "output": "build"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "./build/icons/icon.jpg",
            "uninstallerIcon": "./build/icons/icon.jpg",
            "installerHeaderIcon": "./build/icons/icon.jpg",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "chepp"
        },
        "publish": [],
        "files": [
            "dist",
            "html",
            "package.json"
        ],
        "win": {
            "icon": "./build/icons/icon.jpg",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "ia32"
                    ]
                }
            ]
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "electron": "^17.1.2",
        "electron-builder": "^22.10.5",
        "electron-reload": "^2.0.0-alpha.1",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0"
    },
    "dependencies": {
        "log4js": "^6.4.2",
        "moment": "^2.29.1",
        "typescript": "^4.6.2"
    },
    "config": {}
}